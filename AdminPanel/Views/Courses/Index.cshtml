

@{
    ViewData["Title"] = "Courses";
  
}
@model Course
<section>
    <div class="d-flex justify-content-between align-items-center">

        <div> Number Of Courses:</div>
        <div>

            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCourse">
                <i class="fa-solid fa-plus"></i>
                Add Course
            </button>



        </div>
           
    </div>
        <!-- Modal -->
        <div class="modal fade" id="addCourse" tabindex="-1"  aria-labelledby="addCourseLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content ">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="addCourseLabel">Add Course</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">

                        <form action="/" method="post" enctype="multipart/form-data">

                         <div class="row g-2">
                            <div class="col-12">
                                <label class="form-label" asp-for="ImageName"></label>
                                <input type="file" class="form-control" asp-for="ImageName" >
                                    <span asp-validation-for="ImageName" class="text-danger"></span>
                            </div>




                         </div>


                     
                     </form>



                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>





</section>